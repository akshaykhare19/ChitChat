<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_nav_graph"
    app:startDestination="@id/dashboard">

    <fragment
        android:id="@+id/dashboard"
        android:name="com.stp.chitchat.Dashboard"
        android:label="Dashboard" >
        <action
            android:id="@+id/action_dashboard_to_chattingActivity"
            app:destination="@id/chattingActivity" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.stp.chitchat.UserProfile"
        android:label="UserProfile" >
        <action
            android:id="@+id/action_userProfile_to_loginActivity"
            app:destination="@id/loginActivity" />
    </fragment>
    <activity
        android:id="@+id/chattingActivity"
        android:name="com.stp.chitchat.activities.ChattingActivity"
        android:label="ChattingActivity" >
        <argument
            android:name="uniqueUserId"
            app:argType="string" />
        <argument
            android:name="userName"
            app:argType="string" />
    </activity>
    <activity
        android:id="@+id/loginActivity"
        android:name="com.stp.chitchat.activities.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
</navigation>